<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jag27.sbv002.AddScene">


    <EditText
        android:id="@+id/sceneTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/scene_title"
        android:layout_marginTop="8sp"/>

    <EditText
        android:id="@+id/characterDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sceneTitleText"
        android:hint="@string/list_characters"
        android:layout_marginTop="5sp"
        />

    <EditText
        android:id="@+id/sceneDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterDescriptionText"
        android:hint="@string/write_synopsis"
        android:layout_marginTop="5sp"
        />

</RelativeLayout>
